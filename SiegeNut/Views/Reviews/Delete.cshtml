@model SiegeNut.Models.Review

@{
    ViewBag.Title = "Delete";
}
@section Header {
    <h1>Delete</h1>
}

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Review</h4>
    <div class="row review">
        <div class="col-md-12">
            <strong>@Html.DisplayFor(model => model.Product)</strong>
        </div>
        <div class="col-md-12">
            <strong>@Html.DisplayNameFor(model => model.Rating):</strong>
            @Html.DisplayFor(model => model.Rating)
        </div>
        <div class="col-md-12">
            <strong>@Html.DisplayFor(model => model.Title)</strong>
        </div>
        <div class="col-md-12">
            <strong>@Html.DisplayFor(model => model.Author)</strong> on
            @Model.DateWritten.ToString("MMM dd, yyyy")
        </div>
        <div class="col-md-12">
            @Html.DisplayFor(model => model.MainText)
        </div>
        <div class="col-md-12">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-actions no-color">
                    <input type="submit" value="Delete" class="btn btn-default" />
                </div>
            }
        </div>
    </div>
    @Html.ActionLink("Back to List", "Index", null, new { @class = "btn" })
</div>
