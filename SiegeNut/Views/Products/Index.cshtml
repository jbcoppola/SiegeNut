@model IEnumerable<SiegeNut.Models.Product>

@{
    ViewBag.Title = "Index";
}
@section header {
    <h1>Products</h1>
}

@section List {
@if (ViewBag.isAdmin)
{
    <p>
        @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-lg btn-create" })
    </p>
}
    @foreach (var item in Model)
    {
        <div class="row item">
            <div class="col-md-12">
                @Html.DisplayFor(model => item.Name)
            </div>
            <div class="col-md-12">
                @Html.DisplayFor(model => item.Description)
            </div>
            <div class="col-md-12 center-block image">
                <img src="@Url.Content(item.ImageURL)" class="img-responsive img-rounded" alt="Image" />
            </div>
            <div class="col-md-12">
                @Html.ActionLink("Reviews for this product", "Index", "Reviews", new { searchString = item.Name, searchField = "Product" }, new { @class = "btn" })
                @if (ViewBag.isAdmin)
                {
                    @Html.ActionLink("Edit", "Edit", new { id = item.ID }, new { @class = "btn" })
                }
                @if (ViewBag.isAdmin)
                {
                    @Html.ActionLink("Delete", "Delete", new { id = item.ID }, new { @class = "btn" })
                }
            </div>
        </div>
    }
}