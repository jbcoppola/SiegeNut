@model SiegeNut.Models.Review

@{
    ViewBag.Title = "Details";
}
@section Header {
    <h1>Details</h1>
}

<div class="main-review">
    <h4>Review</h4>
    <div class="row">
        <div class="col-md-12">
            <strong>@Html.DisplayFor(model => model.Product.Name)</strong>
        </div>
        <div class="col-md-12">
            <strong>@Html.DisplayNameFor(model => model.Rating):</strong>
            @Html.DisplayFor(model => model.Rating)
        </div>
        <div class="col-md-12">
            <strong>@Html.DisplayFor(model => model.Title)</strong>
        </div>
        <div class="col-md-12">
            <strong>@Html.DisplayFor(model => model.Author)</strong> on
            @Model.DateWritten.ToString("MMM dd, yyyy")
        </div>
        <div class="col-md-12">
            @Html.DisplayFor(model => model.MainText)
        </div>
        <div class="col-md-12">
            @Html.ActionLink("Delete", "Delete", new { id = Model.ID }, new { @class = "btn" })
            @Html.ActionLink("Edit", "Edit", new { id = Model.ID }, new { @class = "btn" })
            @Html.ActionLink("Back to List", "Index", null, new { @class = "btn" })
        </div>
    </div>
</div>
<p>
</p>
