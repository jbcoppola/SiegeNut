@model SiegeNut.Models.Review

<div class="col-md-12">
    <h2>@Html.DisplayFor(model => model.Product.Name)</h2>
</div>
<div class="col-md-12">
    <div class="review-title">
        <div>
            @for (double i = 0.5; i <= 5; i += 0.5)
            {
                if (i <= Model.Rating)
                {
                    if (i % 1 != 0)
                    {<img src="~/Images/half star left.png" class="star" value=@i />}
                    else
                    {<img src="~/Images/half star right.png" class="star" value=@i />}
                }
                else
                {
                    if (i % 1 != 0)
                    {<img src="~/Images/half empty star left.png" class="star" value=@i />}
                    else
                    {<img src="~/Images/half empty star right.png" class="star" value=@i />}
                }
            }
        </div>
        <div><p><strong>@Html.DisplayFor(model => model.Title)</strong></p></div>
    </div>
    <p>By <strong>@Html.DisplayFor(model => model.Author.UserName)</strong> on @Model.DateWritten.ToString("MMM dd, yyyy")</p>
    @Html.DisplayFor(model => model.MainText)
</div>
